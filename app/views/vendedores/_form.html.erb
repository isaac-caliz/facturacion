<%= simple_form_for(@vendedor) do |f| %>
  <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :nombre %>
          <%= f.input :apellido %>
            <%= f.input :telefono %>
              <%= f.input :correo %>
                <%= f.input :fecha_contratacion %>
      </div>

      <div class="d-flex ">

        <button type="button" class="btn btn-primary m-2">
          <%= f.button :submit, class: "text-light" %>
        </button>
        <button type="button" class="btn btn-secondary m-2">
          <%= link_to "Regresar" , vendedores_path, class: "text-light" %>
        </button>
      </div>
      <% end %>