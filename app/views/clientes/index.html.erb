<p style="color: green">
  <%= notice %>
</p>

<% content_for :title, "Clientes" %>


  <div class="container">

    <h1>Clientes</h1>

    <%= link_to "New cliente" , new_cliente_path %>
      <table class="table">
        <thead>
          <th scope="col">ID</th>
          <th scope="col">Nombres</th>
          <th scope="col">Apellidos</th>
          <th scope="col">Telefono</th>
          <th scope="col">Nit</th>
          <th scope="col">Correo</th>
          <th scope="col">Direccion</th>
          <th scope="col">Acciones</th>
        </thead>
        <tbody>
          <% @clientes.each do | cliente |%>
            <tr>
              <th scope="row">
                <%= cliente.id %>
              </th>
              <td>
                <%= cliente.nombres %>
              </td>
              <td>
                <%= cliente.apellidos %>
              </td>
              <td>
                <%= cliente.telefono%>
              </td>
              <td>
                <%= cliente.nit %>
              </td>
              <td>
                <%= cliente.correo %>
              </td>
              <td>
                <%= cliente.direccion%>
              </td>
              <td>
                <%= link_to "Edit" , edit_cliente_path(cliente.id) %>
                  <%= link_to "Show" , cliente %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
  </div>